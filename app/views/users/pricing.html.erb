<section class="section">
  <div class="columns">
    <div class="column is-4 is-offset-2">
      <div class="card">
        <div class="card-image">
          <figure class="image is-4by3">
            <img src="https://fakeimg.pl/1280x960/?text=VIP" alt="Placeholder image">
          </figure>
        </div>
        <div class="card-content">
          <div class="media">
            <div class="media-left">
              <i class="fas fa-crown is-size-1 has-text-primary"></i>
            </div>
            <div class="media-content">
                <p class="title is-4">VIP 會員</p>
              <p class="subtitle is-6">USD <%= ENV['price_vip'] %></p>
            </div>
          </div>
          <div class="content">
            Lorem ipsum dolor sit amet, consectetur adipiscing elit. Phasellus nec iaculis mauris. 
          </div>
          <%= link_to "購買", payment_users_path(type: 'vip'), class: 'button is-primary is-fullwidth', data:{ turbolinks: "false"}  %>
        </div>
      </div>      
    </div>

    <div class="column is-4">
      <div class="card">
        <div class="card-image">
          <figure class="image is-4by3">
            <img src="https://fakeimg.pl/1280x960/?text=Platinum" alt="Placeholder image">
          </figure>
        </div>
        <div class="card-content">
          <div class="media">
            <div class="media-left">
              <i class="fas fa-crown is-size-1 has-text-danger"></i>
            </div>
            <div class="media-content">
              <p class="title is-4">白金會員</p>
              <p class="subtitle is-6">USD <%= ENV['price_platinum'] %></p>
            </div>
          </div>
          <div class="content">
            Lorem ipsum dolor sit amet, consectetur adipiscing elit. Phasellus nec iaculis mauris.
          </div>
          <%= link_to "購買", payment_users_path(type: 'platinum'), class: 'button is-danger is-fullwidth', data:{ turbolinks: "false"} %>
        </div>
      </div>
    </div>
  </div>
</section>