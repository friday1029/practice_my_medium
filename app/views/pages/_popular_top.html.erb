<article>
  <%= link_to story_page_path(story.user.username, story), class: 'has-text-grey-dark' do %>
    <figure class="image">
      <%= image_tag story.cover_image.variant(resize: '300x300') if story.cover_image.attached? %>
    </figure>
    <h2 class="title is-size-4">
      <p><%= story.title %></p>
      <i class="fas fa-hand-spock has-text-primary is-size-6"></i>
      <span class="clapCount has-text-primary is-size-6"><%= story.clap %></span>
    </h2>
  <% end %>
  <p class="content"><%= strip_tags(story.content).truncate(300) %></p>
  <footer>
    <p><%= link_to story.user.username, user_page_path(story.user.username), class: 'has-text-blue-dark' %> | <%= time_ago_in_words(story.updated_at) %></p>
  </footer>
</article>