<section class="columns">
  <section class="column is-4">
    <%= link_to story_page_path(story.user.username, story), class: 'has-text-grey-dark' do %>
      <figure class="has-text-centered">
        <% if story.cover_image.attached?  %>
          <%= image_tag story.cover_image.variant(resize: '150x150') %>
        <% else %>
          <img src="https://fakeimg.pl/150x150/f0f0f0?text=NoCover" alt="">            
        <% end %>
      </figure>
    <% end %>
  </section>
  <section class="column">
    <%= link_to story_page_path(story.user.username, story), class: 'has-text-grey-dark' do %>
      <h2 class="title is-size-4">
        <p><%= story.title %></p>
        <i class="fas fa-hand-spock has-text-primary is-size-6"></i>
        <span class="clapCount has-text-primary is-size-6"><%= story.clap %></span>
      </h2>
    <% end %>
    <p class="content"><%= strip_tags(story.content).truncate(50) %></p>
    <footer>
      <p><%= link_to story.user.username, user_page_path(story.user.username), class: 'has-text-bule-dark' %> | <%= time_ago_in_words(story.updated_at) %> ago</p>
    </footer>    
  </section>
</section>